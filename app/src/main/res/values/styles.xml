<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotoSansHkStyle">
        <item name="android:fontFamily">@font/noto_sans_hk</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:paddingBottom">@dimen/small_gap</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxStrokeColor">@color/gray</item>
    </style>

    <style name="TextInputEditTextStyle" parent="NotoSansHkStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MaterialButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>